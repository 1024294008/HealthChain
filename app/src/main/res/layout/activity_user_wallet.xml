<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/standardBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:layout_marginBottom="@dimen/standardMargin"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/userInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/back2"/>

            <TextView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/standardBackground"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="我的钱包"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/listItemFontSize" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/transant"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="转账"
                    android:textColor="@color/colorBlack"
                    android:src="@drawable/ic_list_item_detail"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/standardMargin"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="账户地址"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/listItemFontSize" />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0xql29839402390920390432jkn"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="@dimen/listItemFontSize" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/standardMargin"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="账户余额"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/listItemFontSize" />
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="108.0000892100000"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="@dimen/listItemFontSize" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="转账记录"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/visitorsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/standardSelect"
                android:listSelector="@drawable/selector_list_item_bg"/>
        </FrameLayout>
</LinearLayout>